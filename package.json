{
  "name": "react-binding-state",
  "private": false,
  "version": "1.1.2",
  "license": "MIT",
  "type": "module",
  "description": "A lightweight and easy-to-use React library for two-way data binding, simplifying state management and enhancing developer productivity.",
  "homepage": "https://nmhung1210.github.io/react-binding-state",
  "main": "./dist/react-binding-state.umd.cjs",
  "module": "./dist/react-binding-state.mjs",
  "exports": {
    ".": {
      "import": "./dist/react-binding-state.mjs",
      "require": "./dist/react-binding-state.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:types": "tsc",
    "prepublishOnly": "npm run build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "bench": "vitest bench --run",
    "predeploy": "vite build -c vite.config.demo.js",
    "deploy": "gh-pages -d dist-demo",
    "release": "npm version",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "react",
    "state management",
    "binding",
    "react hooks",
    "state",
    "two-way binding"
  ],
  "peerDependencies": {
    "react": "^19.0.0"
  },
  "files": [
    "dist/react-binding-state.mjs",
    "dist/react-binding-state.umd.cjs",
    "dist/BindingState.d.ts"
  ],
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/gh-pages": "^6.1.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "gh-pages": "^6.3.0",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-syntax-highlighter": "^15.6.6",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  }
}
